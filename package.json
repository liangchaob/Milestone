{
  "name": "milestone-v3",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:client": "vite --config v3/vite.config.js",
    "dev:server": "nodemon -e js,json -w server server/index.js",
    "dev": "concurrently -n server,client -c green,blue \"npm:dev:server\" \"npm:dev:client\"",
    "build": "vite build --config v3/vite.config.js",
    "preview": "vite preview --config v3/vite.config.js",
    "smoke": "node scripts/smoke.mjs",
    "test": "vitest --config vitest.config.js --run --coverage",
    "test:unit": "vitest --config vitest.config.js --run --coverage",
    "test:e2e": "playwright test --config v3/tests/playwright.config.ts",
    "test:all": "concurrently -n unit,e2e -c yellow,magenta \"npm:test:unit\" \"npm:test:e2e\"",
    "test:auto": "nodemon -w v3/src -w v3/tests -e js,ts,vue,scss --exec \"npm run test:all\""
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "nanoid": "^5.0.6",
    "sql.js": "^1.10.2",
    "vue": "^3.5.11",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.1.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "jsdom": "^24.1.0",
    "c8": "^9.1.0",
    "nodemon": "^3.1.7",
    "postcss": "^8.4.49",
    "sass": "^1.94.2",
    "tailwindcss": "^3.4.14",
    "vite": "^5.4.10",
    "vitest": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
    "@playwright/test": "^1.49.0"
  }
}
